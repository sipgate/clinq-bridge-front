{
  "name": "clinq-bridge-front",
  "version": "1.0.0",
  "private": true,
  "description": "CLINQ Bridge for Front",
  "main": "dist/index.js",
  "repository": "git@github.com:sipgate/clinq-bridge-front.git",
  "contributors": [
    {
      "name": "Oliver Wegner",
      "email": "oliver@lambda-startup.com"
    }
  ],
  "license": "Apache-2.0",
  "scripts": {
    "postinstall": "tsc",
    "start": "node dist/index",
    "watch": "nodemon --watch 'src/**/*.ts' --exec 'ts-node' --no-cache src/index.ts",
    "lint": "tslint -c tslint.json 'src/**/*.ts'",
    "clean": "rm -rf ./dist"
  },
  "dependencies": {
    "@clinq/bridge": "^7.7.0",
    "@types/express": "^4.16.0",
    "@types/node": "^10.12.9",
    "axios": "^0.18.0",
    "bunyan": "^1.8.12",
    "typescript": "^3.1.6"
  },
  "devDependencies": {
    "husky": "^1.2.0",
    "lint-staged": "^8.0.5",
    "nodemon": "^1.18.7",
    "prettier": "^1.15.2",
    "ts-node": "^7.0.1",
    "tslint": "^5.11.0",
    "tslint-config-prettier": "^1.16.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{ts}": [
      "tslint",
      "prettier --write",
      "git add"
    ],
    "*.{js,json,css,md}": [
      "prettier --write",
      "git add"
    ]
  }
}
